{{#runkit-embed
  source='greet(process.env.NAME, process.env.HOST);'
  preamble='function greet(name, host) { console.log(`Hello, ${ name }. Welcome to ${ host }!`); }'
  env=(list 'NAME=Jim' 'HOST=RunKit')
  nodeVersion=7
  minHeight='150px'
  onLoad=(action 'onLoad')
  onEvaluate=(action 'onEvaluate')
  as |embed|}}
  {{delegate-button text='Run' action=(action embed.evaluate)}}
{{/runkit-embed}}
{{outlet}}
